{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "dist"]
}
  